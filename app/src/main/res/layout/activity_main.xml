<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBF3"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:elevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_scrollFlags="scroll|enterAlways">
            <!-- Logo -->
            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/logo_no_word"
                android:contentDescription="Logo App"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KidoBook"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#283E50"
                app:layout_constraintStart_toEndOf="@id/iv_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="15dp"/>
            <!-- User logo -->
            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Avatar bé"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:scrollbars="none"
        android:paddingBottom="88dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/search_bar_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bạn muốn nghe gì"
                    android:padding="12dp"
                    android:drawablePadding="8dp"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    app:drawableTint="#888888"
                    android:gravity="center_vertical"
                    android:textColor="#888888"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <LinearLayout
                        android:id="@+id/topic_co_tich"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingEnd="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            app:strokeWidth="1dp"
                            app:strokeColor="#02769D"
                            android:src="@drawable/ic_co_tich"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeCircle"
                            android:background="@drawable/topic_circle_background"
                            android:contentDescription="Cổ tích" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Cổ tích"
                            android:textColor="#283E50"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:maxLines="2" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/topic_nuoc_ngoai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingEnd="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_nuoc_ngoai"
                            app:strokeWidth="1dp"
                            app:strokeColor="#f28e9a"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeCircle"
                            android:background="@drawable/topic_circle_background"
                            android:contentDescription="Nước ngoài" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Nước ngoài"
                            android:textColor="#283E50"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:maxLines="2" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/topic_ngu_ngon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingEnd="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            app:strokeWidth="1dp"
                            app:strokeColor="#98633b"
                            android:src="@drawable/ic_ngu_ngon"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeCircle"
                            android:background="@drawable/topic_circle_background"
                            android:contentDescription="Ngụ ngôn" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Ngụ ngôn"
                            android:textColor="#283E50"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:maxLines="2" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/topic_giao_duc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingEnd="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            app:strokeWidth="1dp"
                            app:strokeColor="#D8B12F"
                            android:src="@drawable/ic_giao_duc"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeCircle"
                            android:background="@drawable/topic_circle_background"
                            android:contentDescription="Giáo dục" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Giáo dục"
                            android:textColor="#283E50"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:maxLines="2" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/topic_phieu_luu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:background="?attr/selectableItemBackgroundBorderless">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            app:strokeWidth="1dp"
                            app:strokeColor="#005039"
                            android:src="@drawable/ic_phieu_luu"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeCircle"
                            android:background="@drawable/topic_circle_background"
                            android:contentDescription="Phiêu lưu" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Phiêu lưu"
                            android:textColor="#283E50"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:maxLines="2" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/txtDangNghe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang nghe gần đây "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem tất cả "
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtDangNghe"
                    app:layout_constraintBottom_toBottomOf="@+id/txtDangNghe" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_featured"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clipToPadding="false"
                android:layout_marginTop="16dp" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/txtThinhHanh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thịnh hành "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem tất cả "
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtThinhHanh"
                    app:layout_constraintBottom_toBottomOf="@+id/txtThinhHanh" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_suggestions"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"

        android:background="@drawable/bottom_nav_background"
        app:backgroundTint="@null"

        android:elevation="8dp"
        app:itemIconSize="26dp"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_color_selector"
        app:itemTextColor="@color/bottom_nav_color_selector"
        app:menu="@menu/bottom_nav_menu" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
