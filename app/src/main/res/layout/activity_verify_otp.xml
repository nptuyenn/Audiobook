<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBF3"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_no_word"
        android:contentDescription="Logo"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_border"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_verify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác minh tài khoản"
            android:textColor="#283E50"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_verify_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập mã OTP đã được gửi tới email của bạn"
            android:textColor="#757575"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/et_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mã OTP (6 số)"
            android:inputType="number"
            android:maxLength="6"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/login_box_border"
            android:textColor="#283E50"
            android:textSize="20sp"
            android:padding="12dp"
            android:layout_margin="24dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_verify_otp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Xác minh"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_primary" />
    </LinearLayout>


</LinearLayout>
