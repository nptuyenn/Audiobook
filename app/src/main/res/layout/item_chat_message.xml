<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Tin nhắn của Gấu Nhỏ (Bên trái) -->
    <LinearLayout
        android:id="@+id/layout_ai_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:maxWidth="280dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginEnd="8dp"
            android:layout_gravity="bottom"/>

        <TextView
            android:id="@+id/tv_ai_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_ai"
            android:padding="12dp"
            android:text="Chào bé!"
            android:textColor="#333333"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Tin nhắn của Bé (Bên phải) -->
    <LinearLayout
        android:id="@+id/layout_user_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:maxWidth="280dp">

        <TextView
            android:id="@+id/tv_user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_user"
            android:padding="12dp"
            android:text="Con muốn nghe truyện"
            android:textColor="#283E50"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>